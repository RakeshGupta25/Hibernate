<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- here we done a mapping file for Persistent class -->
<hibernate-mapping>
	<class name="hibernate.pojo.Employee" table="emp">
		<id name="empId" column="eid">
			<generator class="assigned"></generator>
		</id>
		<property name="empName" column="ename"></property>
		<property name="empSalary" column="eSalary"></property>

	</class>
</hibernate-mapping>